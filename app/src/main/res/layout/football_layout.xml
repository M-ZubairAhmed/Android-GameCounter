<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mzubairahmed.gamescorecounter.FootballActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="mzubairahmed.gamescorecounter.FootballActivity">

        <android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:columnCount="10"
            app:rowCount="10">


            <TextView
                android:id="@+id/football_timer_xml"
                android:layout_marginEnd="@dimen/margin_buttons"
                android:layout_marginStart="@dimen/margin_buttons"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/timer_initial_string"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="80sp"
                app:layout_columnSpan="10"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />

            <TextView
                android:id="@+id/team_a_name_xml"
                android:layout_marginEnd="@dimen/margin_buttons"
                android:layout_marginStart="@dimen/margin_buttons"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:maxWidth="0dp"
                android:paddingEnd="@dimen/margin_buttons"
                android:paddingStart="@dimen/margin_buttons"
                android:text="@string/def_team_a_string"
                android:textAppearance="?android:textAppearance"
                android:textColor="@color/colorSecondaryText"
                app:layout_columnSpan="5"
                app:layout_columnWeight="50"
                app:layout_rowWeight="1" />

            <TextView
                android:id="@+id/team_b_name_xml"
                android:layout_marginEnd="@dimen/margin_buttons"
                android:layout_marginStart="@dimen/margin_buttons"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:maxWidth="0dp"
                android:paddingEnd="@dimen/margin_buttons"
                android:paddingStart="@dimen/margin_buttons"
                android:text="@string/def_team_b_string"
                android:textAppearance="?android:textAppearance"
                android:textColor="@color/colorSecondaryText"
                app:layout_columnSpan="5"
                app:layout_columnWeight="50"
                app:layout_rowWeight="1" />

            <TextView
                android:id="@+id/team_a_score_xml"
                android:layout_marginEnd="@dimen/margin_buttons"
                android:layout_marginStart="@dimen/margin_buttons"
                android:gravity="center"
                android:maxLines="1"
                android:maxWidth="0dp"
                android:text="@string/score_initial_string"
                android:textColor="@color/colorPrimaryText"
                android:textSize="100sp"
                app:layout_columnSpan="5"
                app:layout_columnWeight="50"
                app:layout_rowWeight="1" />

            <TextView
                android:id="@+id/team_b_score_xml"
                android:layout_marginEnd="@dimen/margin_buttons"
                android:layout_marginStart="@dimen/margin_buttons"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/score_initial_string"
                android:textColor="@color/colorPrimaryText"
                android:textSize="100sp"
                app:layout_columnSpan="5"
                app:layout_columnWeight="50"
                app:layout_rowWeight="1" />

            <TextView
                android:id="@+id/team_a_yell_xml"
                style="@style/Widget.AppCompat.Button"
                android:layout_margin="@dimen/margin_buttons"
                android:gravity="center"
                android:text="@string/yellow_string"
                app:layout_columnSpan="5"
                app:layout_columnWeight="50"

                app:layout_rowWeight="1" />

            <TextView
                android:id="@+id/team_b_yell_xml"
                style="@style/Widget.AppCompat.Button"
                android:layout_margin="@dimen/margin_buttons"
                android:gravity="center"
                android:text="@string/yellow_string"
                app:layout_columnSpan="5"
                app:layout_columnWeight="50"
                app:layout_rowWeight="1" />

            <TextView
                android:id="@+id/team_a_red_xml"
                style="@style/Widget.AppCompat.Button"
                android:layout_margin="@dimen/margin_buttons"
                android:gravity="center"
                android:text="@string/red_string"
                app:layout_columnSpan="5"
                app:layout_columnWeight="50"
                app:layout_rowWeight="1" />

            <TextView
                android:id="@+id/team_b_red_xml"
                style="@style/Widget.AppCompat.Button"
                android:layout_margin="@dimen/margin_buttons"
                android:gravity="center"
                android:text="@string/red_string"
                app:layout_columnSpan="5"
                app:layout_columnWeight="50"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/team_a_goal_xml"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_margin="@dimen/margin_buttons"
                android:gravity="center"
                android:text="@string/goal_string"
                app:layout_columnSpan="5"
                app:layout_columnWeight="50"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/team_b_goal_xml"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_margin="@dimen/margin_buttons"
                android:gravity="center"
                android:padding="@dimen/margin_buttons"
                android:text="@string/goal_string"
                app:layout_columnSpan="5"
                app:layout_columnWeight="50"
                app:layout_rowWeight="1" />

            <TextView
                android:layout_marginEnd="@dimen/margin_buttons"
                android:layout_marginStart="@dimen/margin_buttons"
                android:paddingEnd="@dimen/padding_start"
                android:paddingStart="@dimen/padding_start"
                android:text="@string/recent_string"
                android:textColor="@color/colorSecondaryText"
                app:layout_columnSpan="10"
                app:layout_columnWeight="1" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="@dimen/margin_buttons"
                android:layout_marginStart="@dimen/margin_buttons"
                android:contentDescription="@string/last_goal_string"
                android:paddingEnd="@dimen/padding_start"
                android:paddingStart="@dimen/padding_start"
                android:src="@drawable/football_icon" />

            <TextView
                android:id="@+id/last_goal_xml"
                android:layout_marginEnd="@dimen/margin_buttons"
                android:layout_marginStart="@dimen/margin_buttons"
                android:ellipsize="start"
                android:maxLines="2"
                android:maxWidth="280dp"
                android:paddingEnd="@dimen/padding_start"
                android:paddingStart="@dimen/padding_start"
                android:text="@string/last_goal_string"
                app:layout_columnSpan="9"
                app:layout_gravity="center_vertical"
                app:layout_rowWeight="1" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="@dimen/margin_buttons"
                android:layout_marginStart="@dimen/margin_buttons"
                android:contentDescription="@string/last_foul_string"
                android:paddingEnd="@dimen/padding_start"
                android:paddingStart="@dimen/padding_start"
                android:src="@drawable/wistle_icon" />

            <TextView
                android:id="@+id/last_foul_xml"
                android:layout_marginEnd="@dimen/margin_buttons"
                android:layout_marginStart="@dimen/margin_buttons"
                android:ellipsize="start"
                android:maxLines="2"
                android:maxWidth="280dp"
                android:paddingEnd="@dimen/padding_start"
                android:paddingStart="@dimen/padding_start"
                android:text="@string/last_foul_string"
                app:layout_columnSpan="9"
                app:layout_gravity="center_vertical"
                app:layout_rowWeight="1" />

        </android.support.v7.widget.GridLayout>

    </ScrollView>

</android.support.design.widget.CoordinatorLayout>
